<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_free"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_free"
        android:textColor="@color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/groupButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/groupButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus">

        <Button
            android:id="@+id/btn15"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:text="@string/time_15m"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn30"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:text="@string/time_30m"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn60"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:text="@string/time_60m"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
